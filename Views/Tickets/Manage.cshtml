@model TicketingLite.ViewModels.TicketManageVm
@using TicketingLite.Models

@{
    ViewData["Title"] = "Manage Ticket";
    var agents = (IEnumerable<dynamic>)ViewBag.Agents;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Manage Ticket</h2>
        <div class="text-muted small">Assign and update status.</div>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.Id">Back</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Manage" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label class="form-label">Status</label>
                <select class="form-select" asp-for="Status" asp-items="Html.GetEnumSelectList<TicketStatus>()"></select>
            </div>

            <div class="mb-3">
                <label class="form-label">Assign agent</label>
                <select class="form-select" asp-for="AssignedAgentUserId">
                    <option value="">Unassigned</option>
                    @foreach (var a in agents)
                    {
                        <option value="@a.Id">@a.Email</option>
                    }
                </select>
            </div>

            <button class="btn btn-primary" type="submit">Save</button>
        </form>
    </div>
</div>
