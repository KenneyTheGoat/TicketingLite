@model List<TicketingLite.Models.Ticket>
@using TicketingLite.Models

@{
    var title = (string?)ViewBag.ViewName ?? "Tickets";
    ViewData["Title"] = title;

    bool isStaff = ViewBag.IsStaff ?? false;
    string q = ViewBag.Q ?? "";
    string status = ViewBag.Status ?? "";

    int openCount = Model.Count(t => t.Status == TicketStatus.Open);
    int inProgCount = Model.Count(t => t.Status == TicketStatus.InProgress);
    int resolvedCount = Model.Count(t => t.Status == TicketStatus.Resolved);

    string StatusBadge(TicketStatus s) => s switch
    {
        TicketStatus.Open => "bg-warning text-dark",
        TicketStatus.InProgress => "bg-primary",
        TicketStatus.Resolved => "bg-success",
        _ => "bg-secondary"
    };

    string PriorityBadge(TicketPriority p) => p switch
    {
        TicketPriority.High => "bg-danger",
        TicketPriority.Medium => "bg-secondary",
        TicketPriority.Low => "bg-light text-dark",
        _ => "bg-secondary"
    };
}

<div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">@title</h2>
        <div class="text-muted small">Track and manage support requests in one place.</div>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-primary" asp-action="Create">New Ticket</a>
    </div>
</div>

<div class="row g-3 mb-3">
    <div class="col-12 col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted small">Open</div>
                <div class="fs-3 fw-semibold">@openCount</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted small">In Progress</div>
                <div class="fs-3 fw-semibold">@inProgCount</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted small">Resolved</div>
                <div class="fs-3 fw-semibold">@resolvedCount</div>
            </div>
        </div>
    </div>
</div>

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-12 col-md-6">
        <label class="form-label small text-muted">Search</label>
        <input class="form-control" name="q" value="@q" placeholder="Title or description..." />
    </div>
    <div class="col-12 col-md-3">
        <label class="form-label small text-muted">Status</label>
        <select class="form-select" name="status">
            <option value="">All</option>
            @foreach (var s in Enum.GetNames(typeof(TicketStatus)))
            {
                <option value="@s" selected="@(s == status)">@s</option>
            }
        </select>
    </div>
    <div class="col-12 col-md-3">
        <button class="btn btn-outline-secondary w-100" type="submit">Apply</button>
    </div>
</form>

@if (!Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="fw-semibold">No tickets found</div>
            <div class="text-muted">Create a new ticket to get started.</div>
            <a class="btn btn-primary mt-3" asp-action="Create">New Ticket</a>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Priority</th>
                        <th>Created</th>
                        @if (isStaff)
                        {
                            <th>Assigned</th>
                        }
                        <th class="text-end" style="width: 170px;"></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td class="fw-semibold">@t.Title</td>
                        <td><span class="badge @StatusBadge(t.Status)">@t.Status</span></td>
                        <td><span class="badge @PriorityBadge(t.Priority)">@t.Priority</span></td>
                        <td class="text-muted">@t.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>

                        @if (isStaff)
                        {
                            <td class="text-muted">@(!string.IsNullOrWhiteSpace(t.AssignedAgentUserId) ? "Assigned" : "Unassigned")</td>
                        }

                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@t.Id">View</a>
                            @if (isStaff)
                            {
                                <a class="btn btn-sm btn-outline-primary" asp-action="Manage" asp-route-id="@t.Id">Manage</a>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
